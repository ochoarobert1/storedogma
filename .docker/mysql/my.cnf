[mysqld]
# Basic Settings
max_connections = 100
max_allowed_packet = 64M
thread_cache_size = 128
table_open_cache = 2000
tmp_table_size = 64M
max_heap_table_size = 64M

# InnoDB Settings - key for performance
innodb_buffer_pool_size = 1G  # Adjust based on available RAM (50-70% of system RAM)
innodb_log_file_size = 256M
innodb_flush_log_at_trx_commit = 2  # Better performance, slight durability trade-off
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Query Cache - useful for WordPress
query_cache_type = 1
query_cache_size = 64M
query_cache_limit = 2M

# Logging
slow_query_log = 1
slow_query_log_file = /var/lib/mysql/slow.log
long_query_time = 2